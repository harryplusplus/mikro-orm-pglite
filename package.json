{
  "name": "mikro-orm-pglite",
  "version": "0.2.2",
  "description": "PGlite driver for MikroORM.",
  "keywords": [
    "knex",
    "knex-pglite",
    "mikro",
    "mikro-orm",
    "orm",
    "pg",
    "pglite",
    "postgres",
    "postgresql"
  ],
  "homepage": "https://github.com/harryplusplus/mikro-orm-pglite#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/harryplusplus/mikro-orm-pglite.git"
  },
  "license": "MIT",
  "author": {
    "name": "harryplusplus",
    "email": "harryplusplus@gmail.com",
    "url": "https://harryplusplus.com"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.mjs"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "all": "run-s generate:readme-toc format lint test build",
    "build": "run-s build:cjs build:esm build:types",
    "build:cjs": "swc src -d dist --strip-leading-paths --delete-dir-on-start",
    "build:esm": "gen-esm-wrapper dist dist/index.mjs",
    "build:types": "tsc -p tsconfig.build.json",
    "format": "run-p format:*",
    "format:package-json": "sort-package-json package.json",
    "format:readme": "prettier -w README*.md",
    "generate:readme-toc": "for file in $(glob 'README*.md'); do markdown-toc -i \"$file\"; done",
    "lint": "eslint",
    "test": "vitest"
  },
  "dependencies": {
    "@harryplusplus/knex-pglite": "^0.10.4"
  },
  "devDependencies": {
    "@electric-sql/pglite": "^0.3.10",
    "@eslint/js": "9.36.0",
    "@mikro-orm/core": "6.5.6",
    "@mikro-orm/postgresql": "6.5.6",
    "eslint": "9.36.0",
    "glob": "11.0.3",
    "markdown-toc": "1.2.0",
    "npm-run-all": "4.1.5",
    "prettier": "3.6.2",
    "sort-package-json": "3.4.0",
    "ts-node": "10.9.2",
    "tsup": "8.5.0",
    "tsx": "4.20.6",
    "typescript": "5.9.2",
    "typescript-eslint": "8.45.0",
    "vitest": "3.2.4"
  },
  "peerDependencies": {
    "@electric-sql/pglite": "^0.3.10",
    "@mikro-orm/core": "^6.5.6",
    "@mikro-orm/postgresql": "^6.5.6"
  },
  "packageManager": "pnpm@10.15.1",
  "engines": {
    "node": ">= 20.19.5"
  }
}
