{
  "name": "mikro-orm-pglite",
  "version": "0.2.0",
  "description": "PGlite driver for MikroORM.",
  "keywords": [
    "knex",
    "knex-pglite",
    "mikro",
    "mikro-orm",
    "orm",
    "pg",
    "pglite",
    "postgres",
    "postgresql"
  ],
  "homepage": "https://github.com/harryplusplus/mikro-orm-pglite#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/harryplusplus/mikro-orm-pglite.git"
  },
  "license": "MIT",
  "author": {
    "email": "harryplusplus@gmail.com",
    "name": "harryplusplus",
    "url": "https://harryplusplus.com"
  },
  "type": "commonjs",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "all": "run-s generate:readme-toc format lint test build",
    "build": "run-s build:cjs build:esm build:types",
    "build:cjs": "swc src -d dist --strip-leading-paths --delete-dir-on-start",
    "build:esm": "gen-esm-wrapper dist dist/index.mjs",
    "build:types": "tsc -p tsconfig.build.json",
    "format": "run-p format:*",
    "format:config": "jsonsort -a package.json tsconfig.json cspell.json",
    "format:readme": "prettier -w README*.md",
    "generate:readme-toc": "for file in $(glob 'README*.md'); do markdown-toc -i \"$file\"; done",
    "lint": "eslint",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js"
  },
  "dependencies": {
    "@electric-sql/pglite": "^0.3.10"
  },
  "devDependencies": {
    "@eslint/js": "9.36.0",
    "@mikro-orm/core": "6.5.6",
    "@mikro-orm/postgresql": "6.5.6",
    "@swc-node/register": "1.11.1",
    "@swc/cli": "0.7.8",
    "@swc/core": "1.13.5",
    "@swc/jest": "0.2.39",
    "@types/jest": "30.0.0",
    "eslint": "9.36.0",
    "gen-esm-wrapper": "1.1.3",
    "glob": "11.0.3",
    "jest": "30.2.0",
    "json-sort-cli": "4.0.10",
    "markdown-toc": "1.2.0",
    "npm-run-all": "4.1.5",
    "prettier": "3.6.2",
    "source-map-support": "0.5.21",
    "ts-node": "10.9.2",
    "typescript": "5.9.2",
    "typescript-eslint": "8.45.0"
  },
  "peerDependencies": {
    "@mikro-orm/core": "^6.5.6",
    "@mikro-orm/postgresql": "^6.5.6"
  },
  "packageManager": "pnpm@10.15.1",
  "engines": {
    "node": ">= 20.19.5"
  }
}
